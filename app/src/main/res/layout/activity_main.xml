<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdohero.gestioncontact.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="Gestion De Contact"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Time"
            android:textSize="24sp"
            android:textStyle="italic"
            android:textColor="#ff0000"
            android:fontFamily="solid"/>"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/image" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">


                    <Button
                        android:id="@+id/addLayout"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="Add"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:background="#000"/>

                    <Button
                        android:id="@+id/removelayout"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="REMove"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_margin="2dp"
                        android:background="#000"/>

                    <Button
                        android:id="@+id/updateLayout"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="2dp"
                        android:text="update"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:background="#000"/>

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/searchLayout"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="search"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:background="#000"/>

                    <Button
                        android:id="@+id/displayLayout"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="display"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:background="#000"/>

                    <Button
                        android:id="@+id/callsmsLayout"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="Call/SMS"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:layout_margin="2dp"
                        android:background="#000"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>
